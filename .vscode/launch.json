{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Launch",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",
        "program": "${env:GODOT4}",
        "cwd": "${workspaceFolder}",
        "console": "internalConsole",
        "stopAtEntry": false,
        "args": [
          "--path",
          "${workspaceRoot}"
        ]
      },
      {
        "name": "Launch (Editor)",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",
        "program": "${env:GODOT4}",
        "cwd": "${workspaceFolder}",
        "console": "internalConsole",
        "stopAtEntry": false,
        "args": [
          "--path",
          "${workspaceRoot}",
          "--editor"
        ]
      },
      {
        "name": "Attach to Process",
        "type": "coreclr",
        "request": "attach"
      }
    ]
}